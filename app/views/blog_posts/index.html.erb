<p id="notice"><%= notice %></p>

<h1>Listing Blog Posts</h1>


<div class="row">
    <% @blog_posts.each do |blog_post| %>
    <div class="col-md-6">
     
        <h2><%= link_to blog_post.title, blog_post %></h2>
        <h3> Posted By <%= blog_post.author %></h3>
        <p><%= blog_post.blog_entry[0..250]  %>...<%= link_to "read more", blog_post %></p>
        <p>
        <%= link_to 'Edit', edit_blog_post_path(blog_post) %>
        <%= link_to 'Destroy', blog_post, method: :delete, data: { confirm: 'Are you sure?' } %></p>
    </div>
    <% end %>
 
</div>

<br>

<%= link_to 'New Blog post', new_blog_post_path %>
